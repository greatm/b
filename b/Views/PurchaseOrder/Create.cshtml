            <tr>
                <th>name</th>
                <th>other</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>

            @if (Model != null && Model.POItems != null)
            {
                foreach (POItem poitem in Model.POItems)
                {
                    Html.RenderPartial("POItemEntry", poitem);
                }
            }
        </table>

        <a id="addAnother" href="#">Add another</a>
        <script type="text/javascript">
            $(function () {
                $("#itemEditor").sortable();
                $("#addAnother").click(function () {
                    $.get('/PurchaseOrder/POItemEntryRow', function (template) {
                        $("#itemEditor").append(template);
                    });
                });
            });
        </script>

    </fieldset>
 
    <p>
        <input type="submit" value="Create" />
        <a href="/">Cancel</a>
    </p>
   
}

