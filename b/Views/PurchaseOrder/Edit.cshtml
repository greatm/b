@using b.ViewModels;

@model PurchaseOrder

@{
    ViewBag.Title = "Purchase Order Edit";
}

<h2>Purchase Order Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>PurchaseOrder</legend>

        @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Date)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Date)
            @Html.ValidationMessageFor(model => model.Date)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Vendors)
        </div>
        <div class="editor-field">
            @Html.DropDownList("VendorID", String.Empty)
            @Html.ValidationMessageFor(model => model.VendorID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Remarks)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Remarks)
            @Html.ValidationMessageFor(model => model.Remarks)
        </div>

    </fieldset>
    
    <fieldset>
        <legend>POItems</legend>

        @if (Model == null || Model.POItems == null || Model.POItems.Count == 0)
        {
            <p>None.</p>
        }
       @* <ul id="itemEditor" style="list-style-type: none">
            @if (Model != null && Model.POItems != null)
            {
                foreach (POItem poitem in Model.POItems)
                {
                    Html.RenderPartial("POItemEntry", poitem);
                }
            }
        </ul>*@
        <table id="itemEditor">
            <tr>
                <th></th>
                <th style="width:100px">Product</th>
                <th style="width:100px">Rate</th>
                <th style="width:100px">Quantity</th>
                <th style="width:100px">Amount</th>
                <th style="width:100px"></th>
            </tr>

            @if (Model != null && Model.POItems != null)
            {
                foreach (POItem poitem in Model.POItems)
                {
                    Html.RenderPartial("POItemEntry", poitem);
                }
            }
        </table>
        <a id="addAnother" href="#">Add another</a>
        <script type="text/javascript">
            $(function () {
                $("#itemEditor").sortable();
                $("#addAnother").click(function () {
                    $.get('/PurchaseOrder/POItemEntry', function (template) {
                        $("#itemEditor").append(template);
                    });
                });
            });
        </script>

    </fieldset>
    
    <p>
        <input type="submit" value="Save" />
    </p>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

