<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <title>b @ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/ajax")
    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/MyScript.js"></script>
    @RenderSection("scripts", required: false)

</head>
<body>

    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("b", "Index", "Home", null, new { @class = "site-logo" })</p>
            </div>
            <div class="float-right">
                <div class="status-message"></div>
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Home", "Index", "Home", new { Area = "" }, null)</li>
                        <li>@Html.ActionLink("Master", "Index", "Master", new { Area = "" }, null)</li>
                        <li>@Html.ActionLink("Purchase", "Index", "PurchaseHome", new { Area = "" }, null)</li>
                        <li>@Html.ActionLink("Sales", "Index", "SalesHome", new { Area = "" }, null)</li>
                        <li>@Html.ActionLink("Reports", "Index", "Reports", new { Area = "" }, null)</li>
                        <li>@Html.ActionLink("About", "About", "Home", new { Area = "" }, null)</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home", new { Area = "" }, null)</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>

    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - great.</p>
            </div>
        </div>
    </footer>

</body>
</html>
