@model b.ViewModels.Sales
@using b.ViewModels

@{
    ViewBag.Title = "Sales Create";
}

<h2>Sales Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Sales</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Date)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Date)
            @Html.ValidationMessageFor(model => model.Date)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SOID)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SOID)
            @Html.ValidationMessageFor(model => model.SOID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CustomerID)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CustomerID)
            @Html.ValidationMessageFor(model => model.CustomerID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Invoice)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Invoice)
            @Html.ValidationMessageFor(model => model.Invoice)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Remarks)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Remarks)
            @Html.ValidationMessageFor(model => model.Remarks)
        </div>

     <div class="editor-label">
            @Html.LabelFor(model => model.BoxNumber)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.BoxNumber)
            @Html.ValidationMessageFor(model => model.BoxNumber)
        </div>

 </fieldset>
    
    <fieldset>
        <legend>Sales Items</legend>

        @if (Model == null || Model.SalesItems == null || Model.SalesItems.Count == 0)
        {
            <p>None.</p>
        }
        <ul id="movieEditor" style="list-style-type: none">
            @if (Model != null && Model.SalesItems != null)
            {
                foreach (SalesItem soitem in Model.SalesItems)
                {
                    Html.RenderPartial("SalesItemEntry", soitem);
                }
            }
        </ul>
        <a id="addAnother" href="#">Add another</a>

        <script type="text/javascript">
            $(function () {
                $("#movieEditor").sortable();
                $("#addAnother").click(function () {
                    $.get('/PurchaseOrder/POItemEntry', function (template) {
                        $("#movieEditor").append(template);
                    });
                });
            });
        </script>
    </fieldset>
     
    <p>
        <input type="submit" value="Create" />
    </p>
}

