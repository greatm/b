@using b.Models;
@using b.ViewModels;

@model IEnumerable<CustomerSummary>

@{
    ViewBag.Title = "Master Customers";
}

<h2>Master Customers</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table>
    <tr>
        <th>Name</th>
        <th>Active?</th>
        <th>Service Level</th>
        <th>Order Count</th>
        <th>Recent Order Date</th>
    </tr>

    @foreach (var summary in Model)
    { 
        <tr>
            <td>@summary.Name </td>
            <td>@summary.Active</td>
            <td>@summary.ServiceLevel</td>
            <td>@summary.OrderCount</td>
            <td>@summary.MostRecentOrderDate</td>
        </tr>
    }

</table>
