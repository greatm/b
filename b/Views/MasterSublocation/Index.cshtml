@using b.ViewModels;

@model IEnumerable<SublocationStore>

@{
    ViewBag.Title = "Master Sub Locations";
}

<h2>Master Sub Locations</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Store)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Sublocation.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Sublocation.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Sublocation.Remarks)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Store.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sublocation.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sublocation.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sublocation.Remarks)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Sublocation.ID, version = item.Sublocation.Version }) |
            @Html.ActionLink("Details", "Details", new { id = item.Sublocation.ID, version = item.Sublocation.Version }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Sublocation.ID, version = item.Sublocation.Version })
            </td>
        </tr>
    }

</table>
