@model db.ViewModels.PurchaseOrder

@{
    ViewBag.Title = "Purchase Order Create";
}

<h2>Purchase Order Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>PurchaseOrder</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Date)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Date)
            @Html.ValidationMessageFor(model => model.Date)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.VendorID)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.VendorID)
            @Html.ValidationMessageFor(model => model.VendorID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Remarks)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Remarks)
            @Html.ValidationMessageFor(model => model.Remarks)
        </div>

    </fieldset>
    <fieldset>
        <legend>Purchase Order Items</legend>

        @if (Model == null || Model.POItems == null || Model.POItems.Count == 0)
        {
            <p>None. or empty</p>
        }
        else
        {
            <ul id="movieEditor" style="list-style-type: none">
                @for (int i = 0; i < Model.POItems.Count; i++)
                {
                    <li style="padding-bottom: 15px">
                        <img src="@Url.Content("~/Content/images/draggable-icon.png")" style="cursor: move" alt="drag"/>

                        @Html.LabelFor(model => model.POItems[i].Rate)
                        @Html.EditorFor(model => model.POItems[i].Rate)
                        @Html.ValidationMessageFor(model => model.POItems[i].Rate)

                        @Html.LabelFor(model => model.POItems[i].Qty)
                        @Html.EditorFor(model => model.POItems[i].Qty)
                        @Html.ValidationMessageFor(model => model.POItems[i].Qty)

                        <a href="#" onclick="$(this).parent().remove();">Delete</a>
                    </li>
                }
            </ul>
        }
     
        <script type="text/javascript">
            $(function () {
                $("#movieEditor").sortable();
            });
        </script>
    </fieldset>
    <a href="#">Add another</a>
   
    <p>
        <input type="submit" value="Create" />
        <a href="/">Cancel</a>
    </p>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
